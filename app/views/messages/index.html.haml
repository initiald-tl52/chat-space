

.wrapper
  = render 'shared/side_bar'
  .chat-main
    .main-header
      .main-header__left-box
        %h2(class = "main-header__left-box__current-group" data-groupid = "")
          グループ名
      = link_to '#' do
        .main-header__edit-btn
          Edit
    .messages
      .message
        .message__upper-info
          %p.message__upper-info__talker
            発信者
          %p.message__upper-info__date
            発信日
        %p.message__text
          テキスト
    .form
      %form(class="new_message" id="new_message" action="")
        %input(name="utf8" type="hidden")
        %input(name="authenticity_token" type="hidden")
        .input-box
          %input(class="input-box__text" placeholder="type a message" type="text")
          %label(class="input-box__image" for="message_image")
            %i.fa.fa-image
            %input(class ="input-box__image__file" id="message_image" type="file" name="message[image]")
        %input(class = "submit-btn" name="commit" type="submit"value="Send")